{% extends "layouts/main.html.twig" %}

{% block body %}
	<div class="px-5 bg-light rounded-3">
		<div class="container-fluid py-5">
			<h1 class="display-5 fw-bold">Registro de Productos</h1>
			<p class="col-md-10 fs-5">Ésta es una prueba técnica realizada por Luis Fernando Acosta Tovar, en su proceso como aspirante a practicante. Fue realizada utilizando Symfony 3.2.4, MySQL, Boostrap, JQuery, Ajax y DataTable JS</p>
		</div>
	</div>

	<div class="container mt-3">
		<div class="row justify-content-center">
			<div class="col-md-7">
				<form action="/products/{{product.getId()}}" method="post">
					<input type='hidden' name='_method' value='PUT'>

					<div class="row align-items-center">
						<div class="col-sm-3">
							<label for="id_producto" class="col-form-label">ID Producto:</label>
						</div>
						<div class="col-sm-9">
							<span class="badge bg-primary">{{product.getId()}}</span>
						</div>
					</div>

					<div class="row align-items-center">
						<div class="col-sm-3">
							<label for="id_producto" class="col-form-label">Clave Producto:</label>
						</div>
						<div class="col-sm-9">
							<span class="badge bg-success">{{product.getClaveProducto()}}</span>
						</div>
					</div>


					<div class="form-group row mt-3">
						<label for="nombre" class="col-sm-3 col-form-label">Nombre:</label>
						<div class="col-sm-9">
							<input type="text" class="form-control" id="nombre" name="nombre" value="{{product.getNombre()}}">
						</div>
					</div>

					<div class="form-group row mt-4">
						<label for="precio" class="col-sm-3 col-form-label">Precio:</label>
						<div class="col-sm-9">
							<input type="number" step="0.01" class="form-control" id="precio" name="precio" value="{{product.getPrecio()}}">
						</div>
					</div>

					<div class="text-end mt-3">
						<input type="submit" value="Guardar" class="btn btn-primary">
					</div>

				</form>
			</div>
		</div>
	</div>
{% endblock %}
